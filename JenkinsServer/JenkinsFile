pipeline {
   agent any   

   environment {
        JENKINS_HOME = 'D:/Jenkins'
        DELAY_TIME = 5
    }

   stages {
    stage('Build') {
        steps {
            // // This command is done implicitely by the config on the Jenkins
            // checkout([$class: 'GitSCM', branches: [[name: '*/master']],
            //     userRemoteConfigs: [[url: 'https://github.com/PabloBelmonte/AutoPlant.git']]])
            printTest('Build')
        }
        

        //  post {
        //     // If Maven was able to run the tests, even if some of the test
        //     // failed, record the test results and archive the jar file.
        //     success {
        //        junit '**/target/surefire-reports/TEST-*.xml'
        //        archiveArtifacts 'target/*.jar'
        //     }
        //  }
    }
    stage('Run Pump') {
        steps {
            printTest('Run Pump')
        }

    }

    stage('Get Sensor Data') {
        steps {
            printTest('Get Sensor Data')
        }
    }

    stage('Show Sensor data') {
        steps {
            printTest('Show Sensor data')
        }
    }

   }
}

def printTest(name) {
    script {
    if (isUnix()) {
            sh "echo $name"
        } else {
            bat "echo $name"
        }
    }
}

def info(message) {
    echo "INFO: ${message}"
}